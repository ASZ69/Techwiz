/* CSS Document */
*{
	box-sizing: border-box;
	margin: 0;
	padding: 0;
}

.navbar{
	width: 100%;
	height: 95px;
}

.nav-color{
	background-color: #ccc;
}

.nav-logo{
	width: 46px;
	height: 46px;
}
.navContentborder{
	border: 1px solid rgba(199,192,192,1.00);
	margin: 5%;
	font-weight: 700;
	letter-spacing: 1.28px;
	font-size: 2vw;
	transition: opacity 0.24s ease-in-out;
}
.textFontsize{
	font-size: 1.2vw;
	font-weight: 700;
	letter-spacing: 1.28px;
	transition: opacity 0.24s ease-in-out;
}
.textFontsize:hover{
	border-bottom: 2px solid rgba(195,0,3,1.00);
}